<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/selectableItemBackgroundBorderless">

    <!-- アイコン -->
    <ImageView
        android:id="@+id/view_top_tab_layout_image"
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:layout_marginTop="3dp"
        android:layout_centerHorizontal="true"
        app:tint="@color/gray" />

    <!-- 文字 -->
    <TextView
        android:layout_below="@+id/view_top_tab_layout_image"
        android:id="@+id/view_top_tab_layout_text"
        android:layout_width="match_parent"
        android:gravity="center"
        android:textColor="@color/gray"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:textSize="10dp" />

    <!-- バッジ-->
    <ImageView
        android:id="@+id/view_top_tab_layout_unread_image"
        android:layout_width="19dp"
        android:layout_height="19dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:layout_marginTop="2dp"
        android:background="@drawable/circle_red_white_frame"
        android:visibility="invisible" />

    <!-- textSizeにspを指定すると、ユーザーの文字サイズ設定次第でレイアウト崩壊するためdpで指定 -->
    <TextView
        android:id="@+id/view_top_tab_layout_unread_text"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="11dp"
        android:layout_width="19dp"
        android:layout_height="19dp"
        android:layout_alignRight="@+id/view_top_tab_layout_unread_image"
        android:layout_alignTop="@+id/view_top_tab_layout_unread_image" />

    <!-- textSizeにspを指定すると、ユーザーの文字サイズ設定次第でレイアウト崩壊するためdpで指定 -->
    <TextView
        android:id="@+id/view_top_tab_layout_standby_text"
        android:text="@string/top_tab_standby"
        android:textColor="@color/white"
        android:background="@drawable/shape_rounded_corners_green"
        android:textSize="9dp"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:layout_marginTop="2dp"
        android:layout_height="15dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:visibility="invisible" />

    <!-- textSizeにspを指定すると、ユーザーの文字サイズ設定次第でレイアウト崩壊するためdpで指定 -->
    <TextView
        android:id="@+id/view_top_tab_layout_sale_text"
        android:text="@string/top_tab_sale"
        android:textColor="@color/app_red"
        android:background="@drawable/shape_rounded_corners_white_corner_red"
        android:textSize="9dp"
        android:layout_width="wrap_content"
        android:gravity="center"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:layout_marginTop="2dp"
        android:layout_height="15dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:visibility="invisible" />
</RelativeLayout>